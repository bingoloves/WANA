<?xml version="1.0" encoding="utf-8"?>
<com.ansen.shape.AnsenLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_add"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:gravity="center"
    app:solid_color="@android:color/darker_gray"
    app:corners_radius="4dp">
    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_add_white" />
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加图片"
        android:visibility="visible"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"/>
</com.ansen.shape.AnsenLinearLayout>