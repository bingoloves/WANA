<?xml version="1.0" encoding="utf-8"?>
<com.ansen.shape.AnsenLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:clickable="true"
    android:background="@android:color/white"
    app:solid_color="@android:color/white"
    app:pressed_solid_color="#80FFFFFF"
    android:focusable="true">
    <TextView
        android:id="@+id/tv_must"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/holo_red_light"
        android:text="*"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_151E32"
        android:text="账号"/>
    <TextView
        android:id="@+id/tv_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="请输入手机号"
        android:gravity="right|center_vertical"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:textColor="@color/color_13171E"
        android:textColorHint="@color/color_C8D1DC" />
</com.ansen.shape.AnsenLinearLayout>